private void MainForm_Load(object sender, EventArgs e)
{
    // TextBox styling
    txtUsername.Font = new Font("Segoe UI", 9);
    txtUsername.BorderStyle = BorderStyle.FixedSingle;
    txtUsername.Text = "Enter username";
    txtUsername.ForeColor = Color.Gray;
    txtUsername.Leave += txtUsername_Leave;
    txtUsername.Enter += txtUsername_Enter;

    // Button styling
    btnFetchUser.Font = new Font("Segoe UI", 9, FontStyle.Bold);
    btnFetchUser.FlatStyle = FlatStyle.Flat;
    btnFetchUser.FlatAppearance.BorderSize = 1;
    btnFetchUser.FlatAppearance.BorderColor = Color.Navy;
    btnFetchUser.FlatAppearance.MouseOverBackColor = Color.DarkCyan;
    btnFetchUser.FlatAppearance.MouseDownBackColor = Color.Teal;
    btnFetchUser.BackColor = Color.Navy;
    btnFetchUser.ForeColor = Color.White;
    btnFetchUser.Size = new Size(100, 30);
    btnFetchUser.TextAlign = ContentAlignment.MiddleCenter;
}
